 }
 .zan-toast {
  position: fixed;
  top: 35%;
  left: 20%;
  transform: translateZ(0) translateY(-100%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  width: 60%;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
.bg{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  overflow: hidden;
  position:fixed; /* static */
  top: 0;
  left: 0;
  z-index: 3;
}
.zindex{
  width: 80%;
  background: #fff;
  margin: 0 auto;
  padding: 30rpx 10rpx;
  position: absolute;
  border-radius: 20rpx;
  z-index: 6;
  top: 50%; 
  left: 50%;  
  -webkit-transform: translate(-50%,-50%);  
  -ms-transform: translate(-50%,-50%);  
  transform: translate(-50%,-50%);  
}
.zindex .recharge{
  text-align: center;
  padding:0 0 30rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.input{
  display:flex;
  justify-content: flex-start;
  margin: 30rpx;
  padding:0 0 30rpx 0rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1px solid #f7f7f7;
}
.button.next{
  display: block;
  height:36px;
  line-height:36px;
  width: 100%;
  margin: 60rpx auto 30rpx;
}
.zindex image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  cursor: pointer;
}
.allXuan .xuanze image{
  width: 40rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.xuanze,.listAll .list{
  position: relative;
}
.xuanze:after,.listAll .list:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid #f7f7f7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.xuanze:before{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:-1px;
    left:0;
    border:1px solid #f7f7f7;
    -webkit-transform:scale(0.5);
    transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.xuanze.borerNone:before{
  content:none;
}
.xuanze{
    font-size:26rpx;
    display: flex;
    justify-content:space-between;
    color:#000;
    padding: 20rpx;
    background: #fff;
}
.xuanze .nextImg{
   font-size: 24rpx;
   color:#848484;
}
.xuanze .nextImg image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.formSubmit button:after{
    content:none;
}
