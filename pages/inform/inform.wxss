}
.footer button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}
button:after{
  content: none;
}
.poster{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
}