    width: 32rpx;
}
.share .wing view{
    display: block;
    font-size: 22rpx;
    margin: 0 auto;
    text-align: center;
    padding:6rpx 2rpx 0 2rpx;
    box-sizing: border-box;
}
.wxParse{
  font-size: 26rpx;
  width: 100%;
}
.wxParse image{
  width: 100%!important;
}
.footer{
  font-size: 32rpx;
