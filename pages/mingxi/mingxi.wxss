/* pages/mingxi/mingxi.wxss */
.noOrder{
  text-align: center;
  padding-top:40rpx;
}
#mingxi{
  display: block;
  width:100%;
}
.list{
  display: flex;
  width:100%;
  padding: 6px 15px;
  box-sizing: border-box;
  background: #fff;
  margin-top:5rpx;
}
.list .left{
    margin-right: 20rpx;
    width: 120rpx;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
}
.list .left image{
  width: 100%;
  max-height: 100%;
  vertical-align: top;
}
.list .center{
  flex: 1;
  position: relative;
}
.list .right{
  width: 120rpx;
  height: 80rpx;
  margin-right: 0;
  text-align: right;
  position: relative;
}
.list .center .h4 image{
    width: 32rpx;
    position: relative;
    top: -4rpx;
    vertical-align: middle;
}
.list .center .h4{
  font-weight: 400;
    font-size: 32rpx;
    height: 70rpx;
    line-height: 70rpx;
    width: auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
}
.list .center .name{
  font-size: 24rpx;
   color:#626262;
}
.list .right .h4{
   height: 120rpx;
   line-height: 120rpx;
   margin-right: 0;
  text-align: right;
  font-size:32rpx;
}
.list .center:after{
  content: '';
  display: inline-block;
  height:100%;
  position:absolute;
  top:0;
  right:0;
  border:2px solid #F7F7F7;
  -webkit-transform:scaleX(0.5);
  transform:scaleX(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}