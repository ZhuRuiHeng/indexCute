page{
  background: #fff;
}
.footer{
  font-size: 26rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
}
.cancel{
  margin-top: 10rpx;
}
.boxList{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.chose-list{
    width: 100%;
    text-align: center;
}
.chose-list .chose-item{
    width: 48%;
    margin: 0 1%;
    float: left;
    background: #f4f4f4;
    padding: 20rpx 20rpx 0 20rpx;
    box-sizing: border-box;
}
.chose-item .chose-text{
  text-align: left;
  padding-left: 20rpx;
  box-sizing: border-box;
}
navigator{
  display: inline-block;
}
.chose-list .chose-item .chose-img{
    width: 100%;
}
.chose-list .chose-item .chose-img image{
    width: 100%;
    vertical-align: middle;
    height:200rpx;
    background: #f4f4f4;
    border-radius: 10rpx;
}
.chose-list .chose-item .chose-text .chose-title{
    color: rgb(152, 152, 152);
	  width: 100%;
	  font-size: 24rpx;
    line-height: 36rpx;
    padding-top:20rpx;
    height: 35rpx;
    display: -webkit-box;  
    display: -moz-box;  
    overflow: hidden;  
    text-overflow: ellipsis;  
    word-break: break-all;  
    -webkit-box-orient: vertical;  
    -webkit-line-clamp:1;  
}
.chose-list .chose-item .chose-text .price{
    color:rgb(220, 165, 74);
    font-size: 24rpx;
    line-height: 58rpx;
}
.navBar{
  width: 100%;
  display: flex;
  justify-content: space-around;
  background: #fff;
  font-size: 28rpx;
  vertical-align: middle;
  padding: 20rpx;
  position: relative;
}
.navBar .navItem image{
  width: 30rpx;
  vertical-align: middle;
}
.navItem.two:after{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.navItem.two:before{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.box{
  width: 100%;
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.zan-toast {
  position: fixed;
  top: 35%;
  left: 20%;
  transform: translateZ(0) translateY(-100%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  width: 60%;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
.navBar:after{
  content: '';
   display: inline-block;
  width:100%;
  position:absolute;
  bottom:0;
  left:0;
  border:1px solid #F7F7F7;
  -webkit-transform:scaleY(0.5);
  transform:scaleY(0.5);
  -webkit-transform-origin:0 0;
  transform-origin:0 0;
  box-sizing:border-box;
}