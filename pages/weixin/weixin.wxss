page{
  background: #fff;
}
.contain{
  font-size: 26rpx;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.title{
  font-weight: bold;
  font-size: 46rpx;
  padding: 20rpx 0 40rpx 0;
}
.img image{
  width: 100%;
  height: 300rpx;
  margin: 10rpx 0;
}
.text{
  line-height: 40rpx;
  padding: 6rpx 0;
}
.box{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.box .left image{
  width: 300rpx;
  height: 300rpx;
}
.box .right view.strong{
    padding: 30rpx 0 0 0;
}
.right .strong{
  font-weight: bold;
  font-size: 32rpx;
}
.right .top{
  padding:70rpx 0 30rpx 0;
  border-bottom: 1px solid #ddd;
}
.red{
  color: rgb(221, 98, 85);
}
.blue{
  color: rgb(102, 170, 177);
  font-weight: bold;
}
.strong{
  font-weight: bold;
}
.fixed{
  position: fixed;
  bottom: 100rpx;
  right: -30rpx;
  background: #626262;
  color: #fff;
  border-radius: 50rpx;
  width: 200rpx;
  padding: 10rpx 0;
}
.fixed button{
  background: #626262;
  color: #fff;
  font-size: 22rpx;
  border-radius: 50rpx;
  padding: 0 10rpx;
  line-height: inherit;
  display: flex;
  justify-content: flex-start;
}
.fixed view{
  padding-right: 26rpx;
  vertical-align: middle;
  position: relative;
  top: 9rpx;
}
button:after{
  content: none;
}
.fixed image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  border-radius: 50%;
  margin-right: 6rpx;
  position: relative;
}
.kuaijie.daohang{
    background: #515151;
    color:#fff;
    text-align: center;
    margin-top: 10rpx;
}
.bar{
  padding: 0;
  overflow: hidden;
  width: 100rpx;
  position: fixed;
  right:0rpx;
  bottom:200rpx;
  z-index: 9;
}
.daohang{
  border-radius: 50%;
  font-size: 22rpx;
  width: 60rpx;
  padding:10rpx;
  height:60rpx;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
}
.cancel{
  margin-top: 10rpx;
}
.footer button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}
button:after{
  content: none;
}
.poster{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
}
.show{display:block;}
.hidden{display:none;}
.bg{
    width: 100%;
    height: 100%;
    background: #000;
    position: fixed;
    bottom: 0;
    left: 0;
    opacity: 0.6;
    z-index: 6;
    overflow: hidden;
}