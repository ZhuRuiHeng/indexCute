page{
    background: #fff;
}
.contain{
  overflow-x: hidden;
}
.contain .title{
    text-align: center;
    font-size: 32rpx;
    padding: 20rpx 0;
}
.huabox{
  width: 300rpx;
  margin: 0 auto;
  text-align: center;
}
.huabox view{
  display: inline-block;
  font-size: 26rpx;
  width: 100rpx;
}
.tab-h{
    height: 80rpx;width: 50%; box-sizing: border-box;overflow: hidden;line-height: 40rpx;
    font-size: 28rpx; white-space: nowrap;z-index: 99;margin:0 auto;}
.navbar{
    margin: 10rpx 0 40rpx;
}
.navbar text{
    display: block;
 }
.tab-item{margin:0 12rpx;display: inline-block;text-align: center;}
.tab-item.active{color: #ff4444;position: relative;}
.picker{
  text-align: center;
}
swiper{
  width:50%;
  text-align: center;
  margin: 0 auto;
  height:80rpx;
  line-height: 40rpx;
}
swiper view{
  width: 33%;
  display: inline-block;
}
/*content  */
.box{
  width: 70%;
  margin: 0 auto 40rpx;
  background: #f4f4f4;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 30rpx;
  min-height: 300px;
}
.box .title-content{
    display: flex;
    justify-content: space-between;
}
.box .title-content picker{
  text-align: left;
  display: inline-block;
}
.box .title-content picker .picker{
  text-align: left;
}
.box .title-content .left{
  min-width: 200rpx;
}
.bar{
  position: relative;
  padding: 30rpx 0;
  box-sizing: border-box;
  width: 100%;
  margin: 0 auto 60rpx;
}
.parents{
  position: absolute;
  height: 16rpx;
  width: 100%;
  background: #d3c2a9;
  border-radius: 10rpx;
}
.child{
  position: absolute;
  height: 16rpx;
  background: #dea44c;
  border-radius: 10rpx;
  left: 0;
}
.priceBar{
  display: flex;
  justify-content: space-between;
  width: 70%;
  margin: 10rpx auto;
  color: #626262;
}
.task{
  display: flex;
  justify-content: flex-start;
}
.task-title{
  color: #ff4444;
}
.task-text{
  padding: 10rpx;
}
.task-content{
  margin-left: 40rpx;
}
.task-content text{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background: #d3c2a9;
  margin-right: 10rpx;
  position: relative;
  top: -4rpx;
}
.task-content text.active{
  background: #dea44c;
}
.task{
  margin-bottom: 30rpx;
}
.task-video{
  width: 100%;
}
.section.tc{
  display: inline-block;
  margin: 6rpx;
}
.section.tc video,.section.tc image{
    width: 200rpx;
    height: 200rpx;
    margin: 10rpx;
    background:#fff;
}
.box .titles{
  position: relative;
}
.box .titles image{
  width: 30rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}
.titles .close{
    width: 60rpx;
    height: 60rpx;
    position:absolute;
    top:-10rpx;
    right:-10rpx;
}
.tasks .task-content{
    margin: 0;
}
.shenhe{
  cursor: pointer;
  font-size: 28rpx;
  width: 200rpx;
  background: #ff4444;
  color: #fff;
  margin: 30rpx auto 10rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  text-align: center;
}
.check{
  padding: 20rpx 0;
}
.task-text image.icon{
    vertical-align: middle;
    width: 40rpx;
    height: 40rpx;
}
/*轮播*/
.swiper{
  width: 750rpx;
  height: 416rpx;
}
.swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.img_tip{
  position: absolute;
  width: 750rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.2);
  margin-top: -100rpx;
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
  padding:10rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.titleUser{
  display: flex;
  justify-content: space-around;
  text-align: center;
  font-size: 26rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.content{
  width: 100%; 
  text-align: center;
  margin: 20rpx 0;
}
.icon{
  display: inline-block;
  width: 33%;
  margin: 6rpx 0;
}
.icon image{
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
}
.titleUser .red{
  color:rgb(220, 165, 74);
}
image.rol{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 6rpx;
  left: 0rpx;
}